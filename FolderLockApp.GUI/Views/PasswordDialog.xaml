<Window x:Class="FolderLockApp.GUI.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" 
        Height="320" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding Message}" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,15"/>

        <!-- Error message display -->
        <Border Grid.Row="1" 
                Background="#FFFFE0E0" 
                BorderBrush="#FFFF0000" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10"
                Visibility="{Binding ErrorMessageVisibility}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#FFCC0000" 
                       TextWrapping="Wrap"/>
        </Border>

        <TextBlock Grid.Row="2" 
                   Text="Password:" 
                   Margin="0,0,0,5"/>
        
        <PasswordBox Grid.Row="3" 
                     x:Name="PasswordBox" 
                     Margin="0,0,0,5"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- Password strength indicator -->
        <Grid Grid.Row="4" 
              Margin="0,0,0,10"
              Visibility="{Binding PasswordStrengthVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Strength: " 
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ProgressBar Width="150" 
                             Height="8" 
                             Minimum="0" 
                             Maximum="4" 
                             Value="{Binding PasswordStrength}"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0">
                    <ProgressBar.Foreground>
                        <SolidColorBrush Color="{Binding PasswordStrengthColor}"/>
                    </ProgressBar.Foreground>
                </ProgressBar>
                
                <TextBlock Text="{Binding PasswordStrengthText}" 
                           VerticalAlignment="Center"
                           FontWeight="Bold">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="{Binding PasswordStrengthColor}"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="5" 
                   Text="Confirm Password:" 
                   Margin="0,0,0,5"
                   Visibility="{Binding ConfirmPasswordVisibility}"/>
        
        <PasswordBox Grid.Row="6" 
                     x:Name="ConfirmPasswordBox" 
                     Margin="0,0,0,10"
                     Visibility="{Binding ConfirmPasswordVisibility}"
                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
